# EditorConfig - Configuracao Universal de Editores
# Baseado em: EditorConfig Standard (editorconfig.org)
# Referencia: Spinellis, D. (2006). Code Quality: The Open Source Perspective

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
